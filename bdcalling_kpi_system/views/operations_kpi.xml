<odoo>
    <record id="view_operations_kpi_list" model="ir.ui.view">
        <field name="name">operations.kpi.list</field>
        <field name="model">operations.kpi</field>
        <field name="arch" type="xml">
            <list>
                <field name="role_id" width="100"/>
                <field name="grade_id" width="100"/>
                <field name="this_month_target" width="100"/>
                <field name="total_operations" width="100"/>
                <field name="shortfall_amount" width="100"/>
                <field name="period_start" width="100"/>
                <field name="period_end" width="100"/>
                <field name="company_id" width="100"/>
            </list>
        </field>
    </record>

    <record id="view_operations_kpi_form" model="ir.ui.view">
        <field name="name">operations.kpi.form</field>
        <field name="model">operations.kpi</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,calculated,done,paid"/>
                    <button name="action_calculate"
                            string="Calculate"
                            type="object"
                            class="btn btn-primary"
                            icon="fa-calculator"
                            invisible="state != 'draft'"/>
                    <button name="action_confirm"
                            string="Confirm"
                            type="object"
                            class="btn btn-primary"
                            icon="fa-check"
                            invisible="state !='calculated'"/>
                            
                    <button name="action_draft"
                            string="Reset to Draft"
                            type="object"
                            class="btn btn-secondary"
                            icon="fa-undo"
                            invisible="state != 'done'"/>
                    <button name="action_mark_paid"
                            string="Mark as Paid"
                            type="object"
                            class="btn btn-success"
                            icon="fa-money"
                            invisible="state != 'done'"/>
                </header>

                <sheet>
                  <div class="oe_title">
                        <label for="employee_id" class="oe_edit_only"  />
                        <h1>
                            <field name="employee_id" placeholder="Enter Employee" readonly="state in ('done','paid')"/>
                        </h1>
                    </div>
                  <group>
                     <group string="Basic Informations">
                        <field name="role_id" readonly="state in ('done','paid')"/>
                        <field name="grade_id" readonly="state in ('done','paid')"/>
                        <field name="this_month_target" readonly="state in ('done','paid')"/>
                        <field name="total_operations" readonly="state in ('done','paid')"/>
                        <field name="shortfall_amount" decoration-danger="state in ('calculated' , 'done' , 'paid')" readonly="state in ('done','paid')"/>
                     </group>
                     <group string="Additional Informations">
                         <field name="period_start" readonly="state in ('done','paid')"/>
                         <field name="period_end" readonly="state in ('done','paid')"/>
                        <field name="company_id" readonly="state in ('done','paid')"/>
                        <field name="bonus_amount" decoration-success="state in ('calculated','done','paid')" readonly="state in ('done','paid')"/>
                     </group>
                  </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>


    <record id="operations_kpi_action" model="ir.actions.act_window">
        <field name="name">Operations KPI</field>
        <field name="res_model">operations.kpi</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="operations_kpi_menu_root"
              name="Operations KPI"
              parent="menu_kpi_root" action="operations_kpi_action" sequence="30" />

</odoo>
