<odoo>
    <record id="view_hr_employee_form_inherit_payroll_name_group" model="ir.ui.view">
        <field name="name">hr.employee.form.payroll.add.name.group</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='payroll_information']//group[@name='contract']" position="after">
                <group string="KPI &amp; Bounus Setting" colspan="2">
                    <field name="role_id"/>
                    <field name="salary"/>
                    <field name="grade_id"/>
                    <field name="minimum_target"/>
                    <field name="this_mounth_target"/>
                    <field name="penalty_amount_"/>
                </group>
            </xpath>

        </field>
    </record>
</odoo>
